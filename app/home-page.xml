<Page xmlns="http://schemas.nativescript.org/tns.xsd">
  <ActionBar title="Insta" class="action-bar" />

  <TabView androidTabsPosition="bottom" selectedTabTextColor="#c67c4e">

    <!-- 🏠 Home -->
    <TabViewItem title="Home" iconSource="res://home">
      <StackLayout>
        <Label text="Welcome to Home Tab" class="h2 text-center" />
        <Label text="&#xe88a;" class="m-icon" />
      </StackLayout>
    </TabViewItem>

    <!-- 📰 Feed -->
    <TabViewItem title=" Feed" iconSource=" res:// feed">
      <StackLayout>
        <Label text=" Feed Tab" class=" h2 text-center" />
      </StackLayout>
    </TabViewItem>

    <!-- ➕ Add Post -->
    <TabViewItem title=" Add Post" iconSource=" res:// add">
      <StackLayout>
        <Label text=" Create a new post" class=" h2 text-center" />
      </StackLayout>
    </TabViewItem>

    <!-- 💬 Messaging -->
    <TabViewItem title=" Messaging" iconSource=" res:// chat">
      <StackLayout>
        <Label text=" Messaging Tab" class=" h2 text-center" />
      </StackLayout>
    </TabViewItem>

    <!-- 👤 Profile -->
    <TabViewItem title=" Profile" iconSource=" res:// profile">
      <StackLayout>
        <Label text=" Profile Tab" class=" h2 text-center" />
        <Label text=" &#xf015;" class=" fas text-center text-2xl" />
      </StackLayout>
    </TabViewItem>

  </TabView>
</Page>